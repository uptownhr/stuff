          | <option value="WY">WY</option>
          | </select>
          input(type='text', name='@zip', placeholder='Zip', id='zip')
          input(type='hidden', name='email', value='#{email}')
          .clear
          if exists == '1'
            input(type='button', class='submit', value='SIGN UP NOW')
          .clear
          .checkboxes
            .checkbox(data-field='rules')
            input(type='hidden', name='rules', value='0', id='rules')
            label By checking this box, I agree to the #[a(href='/rules.pdf', target='_blank') #[br.mobile] official rules]. #[a(href='/rules.pdf', target='_blank') No purchase necessary].#[br.mobile] #[a(href='/rules.pdf', target='_blank') Terms of use] | #[a(href='http://www.condenast.com/privacy-policy#privacypolicy', target='_blank') Privacy policy]
