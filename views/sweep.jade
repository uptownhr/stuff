extends layouts/default

block content
  
  section#page-2(class=(exists ? 'container' : 'container noaccount'))
    .head
      span New Year Self Tone It Up Challenge
    .clear
    hr
    .clear
    h2 YOU’RE IN!
    .content
      | We’re all starting January 3—you’ll receive a reminder email before #[br.desktop]
      | the Challenge kicks off so you can stock your fridge and get your sneakers #[br.desktop]
      | ready. To enter for a chance to win that beach getaway, sign up below.
    .inner
      .top
        h2 ENTER NOW
        .content2 for a chance to win a three-night stay for two at The Buccaneer Resort in St. Croix, spa treatments included!
      form(method='POST', action='/enter-sweep', id='form2')
        .form2-wrapper
          input(type='text', name='@firstName', placeholder='First Name', id='first-name')
          input(type='text', name='@lastName', placeholder='Last Name', id='last-name')
          input(type='text', name='@address1', placeholder='Address', id='address')
          input(type='text', name='@city', placeholder='City', id='city')
