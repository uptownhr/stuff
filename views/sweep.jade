extends layouts/default

block content
  
  section#page-2(class=(exists ? 'container' : 'container noaccount'))
    .head
      span New Year Self Tone It Up Challenge
    .clear
    hr
    .clear
    h2 YOU’RE IN!
    .content
      | We’re all starting January 3—you’ll receive a reminder email before #[br.desktop]
      | the Challenge kicks off so you can stock your fridge and get your sneakers #[br.desktop]
      | ready. To enter for a chance to win that beach getaway, sign up below.
    .inner
      .top
        h2 ENTER NOW
        .content2 for a chance to win a three-night stay for two at The Buccaneer Resort in St. Croix, spa treatments included!
      form(method='POST', action='/enter-sweep', id='form2')
        .form2-wrapper
          input(type='text', name='@firstName', placeholder='First Name', id='first-name')
          input(type='text', name='@lastName', placeholder='Last Name', id='last-name')
          input(type='text', name='@address1', placeholder='Address', id='address')
          input(type='text', name='@city', placeholder='City', id='city')
          input(type='text', name='@state', placeholder='State', id='state')
          input(type='text', name='@zip', placeholder='Zip', id='zip')
          input(type='hidden', name='email', value='#{email}')
          .clear
          if exists
            input(type='submit', class='submit', value='SIGN UP NOW')
          .clear
          .checkboxes
            .checkbox(data-field='rules')
            input(type='hidden', name='rules', value='0', id='rules')
            label By checking this box, I agree to the #[a(href='', target='_blank') #[br.mobile] official rules]. #[a(href='', target='_blank') No purchase necessary].#[br.mobile] #[a(href='', target='_blank') Terms of use] | #[a(href='', target='_blank') Privacy policy]
            .clear
            .checkbox(data-field='optin')
            input(type='hidden', name='optin', value='0', id='optin')
            label Receive more information and special offers from The Buccaneer Resort, St. Croix.
        .clear
        if !exists
          h3 Create an account!
          p.create-account
            | Always stay in the know with the newest topics,#[br.desktop]
            | recipes and workouts to be your best SELF. Be the first to know about#[br.desktop]
            | future SELF Challenges and offers!
          .form2-wrapper
            input(type='password', name='password', placeholder='Password (optional)', id='password')
            input(type='submit', class='submit', value='SIGN UP NOW')